[Unit]
Description=XRandR Monitors Setup

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/sh -c 'xrandr | awk -v dir=%i \'out { gsub("[^0-9.]", "", $$2); print "--output " out " --mode " $$1 " --rate " $$2 pout; pout = " --" dir " " out; out=0 } / connected/ { out=$$1 }\' | xargs xrandr'

[Install]
WantedBy=wm.target
