[Unit]
Description=Xorg server at display %i
Requires=xorg@%i.socket
After=xorg@%i.socket
Wants=xorg.target
Before=xorg.target

[Service]
Type=simple
SuccessExitStatus=0 1
Environment=DISPLAY=:%i
ExecStart=/usr/bin/Xorg ${DISPLAY} -nolisten tcp -verbose 2 "vt${XDG_VTNR}"

